{
  "info": {
    "_postman_id": "rbac-healthcare-collection",
    "name": "RBAC Healthcare API Tests",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "This Postman collection tests all core RBAC scenarios: role-based access, org-level hierarchy, and audit logging."
  },
  "item": [
    {
      "name": "Permission Check - Viewer (Allowed)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3000/permissions/check?user_email=viewer@radiology.com&resource_id=uuid-record-radiology-1&permission=read",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["permissions", "check"],
          "query": [
            { "key": "user_email", "value": "viewer@radiology.com" },
            { "key": "resource_id", "value": "uuid-record-radiology-1" },
            { "key": "permission", "value": "read" }
          ]
        },
        "description": "‚úÖ Viewer accessing own department's record with 'read' permission. Should return granted: true."
      }
    },
    {
      "name": "Permission Check - Viewer (Denied - Update)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3000/permissions/check?user_email=viewer@radiology.com&resource_id=uuid-record-radiology-1&permission=update",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["permissions", "check"],
          "query": [
            { "key": "user_email", "value": "viewer@radiology.com" },
            { "key": "resource_id", "value": "uuid-record-radiology-1" },
            { "key": "permission", "value": "update" }
          ]
        },
        "description": "‚ùå Viewer trying to update a record. Should be denied due to lack of permission."
      }
    },
    {
      "name": "Permission Check - Admin (Denied - Cross Org)",
      "request": {
        "method": "GET",
        "header": [],
